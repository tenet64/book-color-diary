<div class="w-full min-h-screen bg-gradient-to-br  from-amber-50 via-orange-50 bg-yellow-50">
  <!-- メインコンテンツ -->
  <div class="container mx-auto px-4 py-16">
    
    <!-- ヒーローセクション -->
    <div class="text-center mb-16">
      <!-- メインタイトル -->
      <div class="mb-8">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-amber-800 mb-4 tracking-tight">
          📚 本色日記
        </h1>
        <p class="text-lg md:text-xl lg:text-2xl text-amber-700 font-medium max-w-2xl mx-auto leading-relaxed">
          読んだ本から感じた色を記録して<br class="hidden sm:block">
          みんなで共有しよう
        </p>
      </div>

      <!-- 装飾的な色パレット -->
      <div class="flex justify-center gap-2 md:gap-3 mb-12">
        <% sample_colors = ['#ff6b6b', '#ff8e53', '#fdcb6e', '#4ecdc4', '#95e1d3', '#74b9ff', '#a29bfe'] %>
        <% sample_colors.each_with_index do |color, index| %>
          <div class="w-3 h-3 md:w-4 md:h-4 rounded-full shadow-lg animate-pulse"
               style="background-color: <%= color %>; animation-delay: <%= index * 200 %>ms;">
          </div>
        <% end %>
      </div>
    </div>

    <!-- ナビゲーションカード -->
    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-6 md:gap-8">
        
        <!-- 一覧ページへのリンク -->
        <%= link_to books_path, 
            class: "group block p-6 md:p-8 bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-amber-100" do %>
          <div class="text-center">
            <div class="text-5xl md:text-6xl mb-4 md:mb-6 group-hover:scale-110 transition-transform duration-300">
              📖
            </div>
            <h2 class="text-xl md:text-2xl font-bold text-amber-800 mb-3 md:mb-4 group-hover:text-amber-900 transition-colors">
              一覧はこちら
            </h2>
          </div>
        <% end %>

        <!-- 新規投稿ページへのリンク -->
        <%= link_to new_book_path, 
            class: "group block p-6 md:p-8 bg-gradient-to-br from-amber-500 to-orange-500 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 text-white" do %>
          <div class="text-center">
            <div class="text-5xl md:text-6xl mb-4 md:mb-6 group-hover:scale-110 transition-transform duration-300">
              📝
            </div>
            <h2 class="text-xl md:text-2xl font-bold mb-3 md:mb-4 group-hover:text-amber-100 transition-colors">
              感想を投稿
            </h2>
          </div>
        <% end %>

      </div>
    </div>
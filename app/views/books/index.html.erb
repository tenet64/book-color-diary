<div class=" w-full min-h-screen bg-gradient-to-br from-amber-50 to-orange-50  ">
  <!-- ヘッダー -->
  <header class=" bg-white shadow-sm border-b border-amber-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
    <h1 class="text-2xl font-bold text-amber-800">
      <%= link_to "📚 本色日記" ,root_path %>
    </h1>
    <%= link_to "新しい本を追加", new_book_path, 
        class: "bg-amber-600 hover:bg-amber-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
  </div>
</header>

  <!-- メインコンテンツ -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- 書籍グリッド -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @books.each do |book| %>
        <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
          <!-- カラー背景 -->
          <div class="h-4" style="background-color: <%= book.color_code %>"></div>
          
          <!-- 書籍情報 -->
          <div class="p-4">
            <h2 class="text-lg font-bold text-gray-900 mb-2">
              <%= book.title %>
            </h2> 

          <!--- 一言感想 -->
          <div class="p-4">
            <p class="text-sm text-gray-800 italic">
              <%= book.comment %>
            </p>
          </div>
          </div>
        </div>
      <% end %>
    </div>
  </main>
</div>

<div class="min-h-screen bg-gradient-to-br from-amber-50 via-orange-50 to-yellow-50">
  <div class="container mx-auto px-4 py-8 md:py-16">
    
    <!-- ヘッダーセクション -->
    <div class="text-center mb-8 md:mb-12">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-amber-800 mb-3 md:mb-4">
        📚 新しい本を登録
      </h1>
      <p class="text-amber-600 text-base md:text-lg max-w-2xl mx-auto leading-relaxed">
        読んだ本の感想と、その本から感じた色を記録しましょう
      </p>
    </div>

    <!-- フォームセクション -->
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-2xl shadow-xl border border-amber-100 overflow-hidden">
        
        <!-- フォームヘッダー -->
        <div class="bg-gradient-to-r from-amber-500 to-orange-500 px-6 md:px-8 py-4 md:py-6">
          <h2 class="text-xl md:text-2xl font-semibold text-white flex items-center">
            <span class="mr-3">📝</span>
            本の情報を入力
          </h2>
        </div>

        <!-- フォーム本体 -->
        <div class="p-6 md:p-8">
          <%= render 'form', book: @book %>
        </div>

      </div>
    </div>

    <!-- アクションボタンセクション -->
    <div class="max-w-2xl mx-auto mt-8">
      <div class="text-center">
        <%= link_to books_path, 
            class: "inline-flex items-center px-6 py-3 bg-white text-amber-700 font-semibold rounded-xl shadow-lg hover:shadow-xl border border-amber-200 hover:bg-amber-50 transition-all duration-300 transform hover:-translate-y-1" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          📖 本の一覧に戻る
        <% end %>
      </div>
    </div>

  </div>
</div>